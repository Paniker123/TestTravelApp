<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.woodman.testtravelapp.fragment.ExploreFragment"

    >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginEnd="10dp"
        android:layout_marginStart="10dp"
        android:layout_marginTop="10dp"
        android:orientation="horizontal">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/explore_fragment_textView_popular_tours"
            android:textSize="20sp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="end"
            android:orientation="horizontal">

            <ImageButton
                android:id="@+id/explore_fragment_image_btn_left_popular_tours"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:background="@drawable/background_btn_chevron"
                app:srcCompat="@drawable/ic_chevron_left" />

            <ImageButton
                android:id="@+id/explore_fragment_image_btn_right_popular_tours"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:background="@drawable/background_btn_chevron"
                app:srcCompat="@drawable/ic_chevron_right" />
        </LinearLayout>
    </LinearLayout>

    <android.support.v7.widget.RecyclerView
        android:id="@+id/recyclerView_popular_tours"
        android:layout_width="match_parent"
        android:layout_height="90dp"
        android:layout_marginStart="10dp"
        android:layout_marginTop="15dp"
        android:orientation="horizontal" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginEnd="10dp"
        android:layout_marginStart="10dp"
        android:layout_marginTop="10dp"
        android:orientation="horizontal">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/explore_fragment_textView_new_offers_tours"
            android:textSize="20sp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="end"
            android:orientation="horizontal">

            <ImageButton
                android:id="@+id/explore_fragment_image_btn_left_new_offers_tours"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:background="@drawable/background_btn_chevron"
                app:srcCompat="@drawable/ic_chevron_left" />

            <ImageButton
                android:id="@+id/explore_fragment_image_btn_right_new_offers_tours"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:background="@drawable/background_btn_chevron"
                app:srcCompat="@drawable/ic_chevron_right" />
        </LinearLayout>
    </LinearLayout>

    <android.support.v7.widget.RecyclerView
        android:id="@+id/recyclerView_new_offers_tours"
        android:layout_width="match_parent"
        android:layout_height="90dp"
        android:layout_marginStart="10dp"
        android:layout_marginTop="15dp"
        android:orientation="horizontal" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginEnd="10dp"
        android:layout_marginStart="10dp"
        android:layout_marginTop="10dp"
        android:orientation="horizontal">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/explore_fragment_textView_best_destinations"
            android:textSize="20sp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="end"
            android:orientation="horizontal">

            <ImageButton
                android:id="@+id/explore_fragment_image_btn_left_best_destinations"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:background="@drawable/background_btn_chevron"
                app:srcCompat="@drawable/ic_chevron_left" />

            <ImageButton
                android:id="@+id/explore_fragment_image_btn_right_best_destinations"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:background="@drawable/background_btn_chevron"
                app:srcCompat="@drawable/ic_chevron_right" />
        </LinearLayout>
    </LinearLayout>

    <android.support.v7.widget.RecyclerView
        android:id="@+id/recyclerView_best_destinations"
        android:layout_width="match_parent"
        android:layout_height="90dp"
        android:layout_marginStart="10dp"
        android:layout_marginTop="15dp"
        android:orientation="horizontal" />

</LinearLayout>
