<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="130dp"
    android:background="@drawable/background_rectangle"
    android:orientation="horizontal">

    <ImageView
        android:id="@+id/image_view_hotel_photo"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="2"
        app:srcCompat="@drawable/ic_local_hotel" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:orientation="vertical"
        android:padding="20dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="end"
            >
            <ImageView
                android:id="@+id/image_view_favorite_indicator"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:srcCompat="@drawable/ic_favorite_border" />

        </LinearLayout>


        <TextView
            android:id="@+id/text_view_hotel_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Hotel name"
            android:textColor="@color/hotel_item_textView_hotel_name" />

        <TextView
            android:id="@+id/text_view_hotel_location"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Hotel location"
            android:textSize="10sp" />

        <TextView
            android:id="@+id/text_view_hotel_price"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="end|bottom"
            android:text="400$"
            android:textColor="@color/colorPrimary" />

    </LinearLayout>
</LinearLayout>