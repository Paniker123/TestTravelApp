<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.woodman.testtravelapp.fragment.TicketPriceFragment"

    >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="2"
            android:background="@drawable/background_gradient" />

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1" />

    </LinearLayout>

    <LinearLayout
        android:id="@+id/layoutTravelCost"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
        android:layout_marginEnd="20dp"
        android:layout_marginStart="20dp"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <LinearLayout

                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@drawable/background_rectangle"
                android:gravity="center"
                android:padding="24dp"
                android:orientation="vertical"
                >

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginBottom="8dp"
                    >

                    <TextView
                        android:text="@string/text_view_min_price_fragment_ticket_price"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="12sp"
                        />

                    <TextView
                        android:id="@+id/text_view_minimum_price"
                        android:text="400$"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="@color/text_view_price"
                        android:textSize="12sp"
                        />
                </LinearLayout>

                <Button
                    android:layout_width="100dp"
                    android:layout_height="30dp"
                    android:background="@drawable/rectangle_gradient"
                    android:text="@string/btn_text_i_can_book"
                    android:textAllCaps="false"
                    android:textColor="@color/btn_i_can_book_text_wight" />
            </LinearLayout>

            <LinearLayout

                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@drawable/background_rectangle"
                android:gravity="center"
                android:padding="24dp"
                android:orientation="vertical"
                >

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginBottom="8dp"

                    >

                    <TextView
                        android:text="@string/text_view_average_price_fragment_ticket_price"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="12sp"
                        />

                    <TextView
                        android:id="@+id/text_view_average_price"
                        android:text="600$"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="@color/text_view_price"
                        android:textSize="12sp"
                        />
                </LinearLayout>

                <Button
                    android:layout_width="100dp"
                    android:layout_height="30dp"
                    android:background="@drawable/rectangle_gradient"
                    android:text="@string/btn_text_i_can_book"
                    android:textAllCaps="false"
                    android:textColor="@color/btn_i_can_book_text_wight" />
            </LinearLayout>
        </LinearLayout>


        <LinearLayout
            android:id="@+id/text_view_car_home_fragment"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:background="@drawable/background_rectangle"
            android:gravity="center"
            android:orientation="vertical"
            android:padding="24dp">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginBottom="8dp"
                >

                <TextView
                    android:text="@string/text_view_maximum_price_fragment_ticket_price"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="12sp"
                    />

                <TextView
                    android:id="@+id/text_view_maximum_price"
                    android:text="800$"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/text_view_price"
                    android:textSize="12sp"
                    />
            </LinearLayout>

            <Button
                android:layout_width="100dp"
                android:layout_height="30dp"
                android:background="@drawable/rectangle_gradient"
                android:text="@string/btn_text_i_can_book"
                android:textAllCaps="false"
                android:textColor="@color/btn_i_can_book_text_wight" />
        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@id/layoutTravelCost"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="20dp"
        android:gravity="center"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="20dp"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="18sp"
                android:text="@string/textView_your_travel_price_fragment_ticket_price"
                android:textColor="@color/textView_your_travel_price" />

            <TextView
                android:id="@+id/text_view_travel_price"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="18sp"
                android:text="700 $"
                android:textColor="@color/textView_your_travel_price"
                android:textStyle="bold" />

        </LinearLayout>

        <Button
            android:layout_width="100dp"
            android:layout_height="30dp"
            android:background="@drawable/rectangle_stroke_wight"
            android:text="@string/btn_text_i_can_book"
            android:textAllCaps="false"
            android:textColor="@color/btn_i_can_book_text" />

    </LinearLayout>

    <Button
        android:id="@+id/btn_find_now_fragment_ticket_price"
        android:layout_width="240dp"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="80dp"
        android:background="@drawable/rectangle_gradient"
        android:text="@string/btn_find_now_fragment_ticket_price"
        android:textAllCaps="false"
        android:textColor="#fff" />
</RelativeLayout>
